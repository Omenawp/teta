<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_movie_width"
    android:layout_height="@dimen/item_movie_height">

    <androidx.cardview.widget.CardView
        android:id="@+id/poster_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_movie_height_poster_image"
        app:cardCornerRadius="@dimen/item_movie_corner_radius_poster"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/item_movie_margin_movie_to_frame"
        android:layout_marginTop="@dimen/item_movie_margin_movie_title_top"
        android:textSize="@dimen/item_movie_text_size_movie_title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poster_view" />

    <TextView
        android:id="@+id/movie_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/item_movie_margin_movie_description_top"
        android:layout_marginStart="@dimen/item_movie_margin_movie_to_frame"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/item_movie_text_size_movie_description"
        app:layout_constraintBottom_toTopOf="@id/rating_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_title" />

    <com.oelrun.teta.utils.RatingView
        android:id="@+id/rating_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_movie_height_rating"
        android:layout_marginStart="@dimen/item_movie_margin_movie_to_frame"
        android:layout_marginBottom="@dimen/item_movie_margin_movie_to_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/age_level"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/age_level"
        android:layout_width="@dimen/item_movie_size_age_ic"
        android:layout_height="@dimen/item_movie_size_age_ic"
        android:layout_marginEnd="@dimen/item_movie_margin_movie_age_to_frame"
        android:layout_marginBottom="@dimen/item_movie_margin_movie_age_to_frame"
        android:background="@drawable/bgr_circle"
        android:gravity="center"
        android:textSize="@dimen/item_movie_text_size_movie_age_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>