<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileSettingsItem">
        <item name="android:textSize">@dimen/profile_text_size_main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_height_item</item>
        <item name="android:drawableEnd">@drawable/bgr_arrow</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProfileEditItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/profile_text_size_main</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@drawable/bgr_edit_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_view</item>
        <item name="android:paddingTop">@dimen/profile_padding_edit_text_vert</item>
        <item name="android:paddingBottom">@dimen/profile_padding_edit_text_vert</item>
    </style>

</resources>