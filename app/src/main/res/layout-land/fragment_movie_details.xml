<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/about_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/movie_detail_margin_main_to_bottom">

            <ImageView
                android:id="@+id/image_poster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:layout_constraintEnd_toStartOf="@id/movie_description"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movie_genre_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_main"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@drawable/bgr_genre"
                android:textSize="@dimen/movie_detail_text_size_genre"
                app:layout_constraintStart_toEndOf="@id/image_poster"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/movie_genre_action" />

            <TextView
                android:id="@+id/movie_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_detail_margin_data_start"
                android:textSize="@dimen/movie_detail_text_size_data"
                app:layout_constraintBottom_toBottomOf="@+id/movie_genre_name"
                app:layout_constraintStart_toEndOf="@+id/movie_genre_name"
                app:layout_constraintTop_toTopOf="@+id/movie_genre_name"
                tools:text="@string/movie_data" />

            <TextView
                android:id="@+id/movie_age_level"
                android:layout_width="@dimen/movie_detail_size_age_ic"
                android:layout_height="@dimen/movie_detail_size_age_ic"
                android:layout_marginTop="@dimen/movie_detail_margin_age_ic_to_top"
                android:layout_marginEnd="@dimen/margin_main"
                android:background="@drawable/bgr_circle"
                android:paddingVertical="@dimen/movie_detail_paddings_age_ic"
                android:textAlignment="center"
                android:textSize="@dimen/movie_detail_text_size_age"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/age_level_18_up" />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_main"
                android:layout_marginTop="@dimen/movie_detail_margin_title_to_top"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/movie_detail_text_size_title_movie"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/movie_age_level"
                app:layout_constraintStart_toEndOf="@id/image_poster"
                app:layout_constraintTop_toBottomOf="@+id/movie_data"
                tools:text="@string/movie_title" />

            <com.oelrun.teta.utils.RatingView
                android:id="@+id/movie_rating"
                android:layout_width="0dp"
                android:layout_height="@dimen/movie_detail_height_rating"
                android:layout_marginStart="@dimen/margin_main"
                android:layout_marginTop="@dimen/movie_detail_margin_rating_to_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_poster"
                app:layout_constraintTop_toBottomOf="@+id/movie_title"
                tools:rating="@integer/movie_rating_temp" />

            <TextView
                android:id="@+id/movie_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_main"
                android:layout_marginTop="@dimen/movie_detail_margin_description_to_rating"
                android:textSize="@dimen/movie_detail_text_size_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintStart_toEndOf="@id/image_poster"
                app:layout_constraintTop_toBottomOf="@id/movie_rating"
                tools:text="@string/movie_description" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:barrierDirection="bottom"
                app:barrierMargin="0dp"
                app:constraint_referenced_ids="image_poster, movie_description" />

            <TextView
                android:id="@+id/actors_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_main"
                android:layout_marginTop="@dimen/movie_detail_margin_actors_title_to_description"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/actors_title"
                android:textSize="@dimen/movie_detail_text_size_actors_title"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cast_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/movie_detail_margin_actors_container_top"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actors_title" />

            <TextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/movie_detail_margin_actors_container_top"
                android:text="@string/movie_detail_error_message_cast"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actors_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>